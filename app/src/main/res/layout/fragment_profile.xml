<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
    android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear_edit"
                android:layout_gravity="right"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/img_edit"
                    android:src="@drawable/edit_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تعديل"
                    android:textSize="25sp"/>
            </LinearLayout>


            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسم المستخدم"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username_text"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الجنس"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gender_text"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الراتب"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/salary_text"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الميزانيه الاسبوعية"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/budget_text"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />


            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عدد افراد الاسره"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/family_num_text"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رقم الجوال"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_num_text"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="البريد الالكترونى"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_text"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                />


            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تغيير كلمه المرور"
                android:id="@+id/change_password_text"
                android:textSize="19sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                android:background="@color/bg"
                android:padding="7dp"
                />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</android.support.design.widget.CoordinatorLayout>
